rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }

    // --- User Profiles ---
    // Users can read any profile (needed for names/pics in forum).
    // Users can only write to their own profile. Admins can write to any profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
    }

    // --- Forum Categories ---
    // Authenticated users can read categories.
    // Only admins can create, update, or delete categories.
    match /forum_categories/{categoryId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin(request.auth.uid);
    }

    // --- Category Suggestions ---
    // Users can create suggestions for their own user ID.
    // Admins can read, update, and delete any suggestion.
    match /category_suggestions/{suggestionId} {
      allow create: if request.auth != null && request.resource.data.requestedBy == request.auth.uid;
      allow read, update, delete: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    // --- Forum Messages ---
    // Any authenticated user can read messages.
    // Only authenticated users who are members of the community can create messages.
    // Nobody can update or delete messages.
    match /forum_messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null 
                      && request.resource.data.categoryId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.followedCategoryIds;
      allow update, delete: if false;
    }
  }
}
