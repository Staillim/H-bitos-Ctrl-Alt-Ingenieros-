
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección 'users'
    match /users/{userId} {
      // Un usuario autenticado puede leer y escribir su propio documento.
      // Los administradores pueden leer cualquier documento de usuario.
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para la colección de categorías del foro
    match /forum_categories/{categoryId} {
        // Cualquiera usuario autenticado puede leer la lista de categorías.
        allow read: if request.auth != null;
        // Solo los administradores pueden crear, actualizar o eliminar categorías.
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Reglas para las sugerencias de categorías
    match /category_suggestions/{suggestionId} {
      // Los administradores pueden leer todas las sugerencias.
      // Los usuarios pueden leer sus propias sugerencias.
      allow read: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || resource.data.requestedBy == request.auth.uid);
      // Los usuarios autenticados pueden crear sugerencias.
      allow create: if request.auth != null;
      // Solo los administradores pueden actualizar el estado (aprobar/rechazar).
      allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // Solo los administradores pueden eliminar.
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Reglas para los mensajes de una categoría específica del foro
    match /forum_messages/{messageId} {
        // Para leer un mensaje, el usuario debe estar autenticado y seguir la categoría.
        allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.followedCategoryIds.has(resource.data.categoryId);

        // Para crear un mensaje, el usuario debe estar autenticado, seguir la categoría y ser el autor del mensaje.
        allow create: if request.auth != null 
                      && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.followedCategoryIds.has(request.resource.data.categoryId)
                      && request.resource.data.userId == request.auth.uid;

        // No se permite actualizar ni eliminar mensajes una vez enviados.
        allow update, delete: if false;
    }
  }
}
